<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text="@string/tv_select_test_object"
        android:textColor="@android:color/black"
        android:textSize="?attr/fontSize_2"/>

    <EditText
        android:id="@+id/et_select_test_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:hint="@string/et_select_test_object"
        android:textSize="?attr/fontSize_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text="@string/tv_select_test_object1"
        android:textColor="@android:color/black"
        android:textSize="?attr/fontSize_2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="自己"
        android:textColor="@android:color/black"
        android:textSize="?attr/fontSize_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="张三"
        android:textColor="@android:color/black"
        android:textSize="?attr/fontSize_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="李四"
        android:textColor="@android:color/black"
        android:textSize="?attr/fontSize_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="王五"
        android:textColor="@android:color/black"
        android:textSize="?attr/fontSize_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="赵六"
        android:textColor="@android:color/black"
        android:textSize="?attr/fontSize_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>


    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/rv_select_test_object"-->
    <!--android:layout_width="match_parent"-->
