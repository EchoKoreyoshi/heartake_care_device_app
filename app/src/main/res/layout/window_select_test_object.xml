    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_select_test_object_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/tv_select_test_object_add"
                android:textColor="@color/colorPrimary"
                android:textSize="?attr/fontSize_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_select_test_object_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/tv_select_test_object_ok"
                android:textColor="@color/colorPrimary"
                android:textSize="?attr/fontSize_2"/>

            <TextView
                android:id="@+id/tv_select_test_object_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/tv_select_test_object_no"
                android:textColor="@color/colorPrimary"
                android:textSize="?attr/fontSize_2"/>
        </LinearLayout>

    </LinearLayout>
